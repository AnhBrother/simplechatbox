{
  "name": "simplechatbox",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace frontend",
    "start:backend": "npm run start:dev --workspace backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run start:backend\"",
    "install": "npm install --legacy-peer-deps"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
